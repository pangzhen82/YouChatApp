<Window x:Class="YouChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:YouChat" xmlns:viewmodel="clr-namespace:YouChat.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="550" Width="850"
        Background="#36393F"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
                Background="#29282F"
                MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Image Source="C:\Users\pangz\Documents\MSSA\Data Structure and Algorithms\MidTermProject\YouChat\Icons/Logo.png"
                       Height="20"
                       Width="20" 
                       HorizontalAlignment="Left"
                       Margin="5,0,0,0"/>
                <Label Content="YouChat"
                       Foreground="LightGray"
                       FontWeight="SemiBold"
                       Margin="25,0,0,0"
                       Width="200" HorizontalAlignment="Left"
                       VerticalAlignment="center"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Width="45" Height="28"
                            Content="⚊"
                            Background="Transparent"
                            Foreground="LightGray"
                            Click="ButtonMinimize_Click"
                            Margin="0,0,0,3"/>
                    <Button Width="45" Height="28"
                            Content="☐"
                            Background="Transparent"
                            Foreground="LightGray"
                            FontWeight="Bold"
                            Click="WindowStateButton_Click"
                            Margin="0,0,0,3"/>
                    <Button Width="45" Height="28"
                            Content="✕"
                            Background="Transparent"
                            Foreground="LightGray"
                            FontWeight="Bold"
                            Click="CloseButton_Click"
                            Margin="0,0,0,3"/>

                </StackPanel>

            </Grid>
        </Border>

        <Grid Background="#2F3136"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Content="Contacts"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="LightGray"
                   Margin="8,0,0,0"/>

            <ListView ItemsSource="{Binding Contacts}"
                      SelectedItem="{Binding SelectedContact}"
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.Row="1"
                      ItemContainerStyle="{StaticResource ContactCard}"/>
            <DockPanel Grid.Row="2"
                       Background="Transparent">
                <Button Height="30"
                        DockPanel.Dock="Top"
                        FontWeight="Medium"
                        Foreground="white"
                        Background="Transparent"
                        Content="Connect"
                        Command="{Binding ConnectToServerCommand}"/>
            </DockPanel>
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        Background="#29282F">
                <Border CornerRadius="25"
                        Width="30" Height="30"
                        Background="#3bff6f"
                        Margin="18,0,0,0 "/>

                <StackPanel VerticalAlignment="Center">
                    <Label Name="LblUsername"
                           Content="@PCAD16 Chat"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="0,-5,0,-5"/>
                    <Label Content="On Line"
                           Foreground="Gray"
                           FontWeight="SemiBold"
                           FontSize="10"
                           Margin="0,-5,0,-5"/>

                </StackPanel>

            </StackPanel>
        </Grid>

        <Grid Grid.Column="1"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="167*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#2f3136"
                    BorderThickness="0,0,0,2" Grid.ColumnSpan="2">
                <Grid HorizontalAlignment="Stretch"
                      Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="213*"/>
                        <ColumnDefinition Width="79*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text ="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             x:Name="AliasBox"
                             Width="200"
                             Height="30"
                             Foreground="White"
                             Background="Transparent"
                             FontWeight="Bold"
                             FontSize="15"
                             Margin="5,0,0,0"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"/>


                    <TextBlock IsHitTestVisible="False"
                               Text="@Alias"
                               FontSize="16"  
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="5,0,0,0"
                               Foreground="LightGray">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=AliasBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>

                            </Style>
                        </TextBlock.Style>
                    </TextBlock>


                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left" Grid.Column="1" Margin="68,0,0,0">
                        <Image Width="25" Height="25"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,0,10,0"
                               Source="./Icons/telephone.png"/>
                        <Image Width="25" Height="25"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,0,20,0"
                               Source="./Icons/video.png"/>
                    </StackPanel>
                </Grid>
            </Border>
            <ListView x:Name="MainMessageView"
                      ItemsSource="{Binding MessagesModels}"
                      Background="Transparent"
                      BorderThickness="0"
                      ItemContainerStyle="{StaticResource ChatItem}"
                      Margin="8,0,0,0"
                      Grid.Row="1" Grid.ColumnSpan="2"
                      FontFamily="Segoe UI Emoji"
                      TextOptions.TextFormattingMode="Display">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="128"/>
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MessageBox}"
                         Grid.ColumnSpan="2" Margin="8,10,8,10" x:Name="MessageInputBox"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="right"
                            Margin="0,0,15,0" Grid.ColumnSpan="2" Width="135">

                    <Button Width="60" Height="30"
                            Background="Transparent"
                            RenderOptions.BitmapScalingMode="Fant"
                            Margin="5,0,0,0"
                            Click="OpenEmojiPicker">
                        <Image Source="./Icons/plus.png"
                               Width="25" Height="25"/>
                    </Button>
                    <Popup Name="emojiPopup" 
                           Placement="Bottom" 
                           PlacementTarget="{Binding ElementName=MessageBox}" 
                           StaysOpen="False">
                        <Border Background="White" 
                                BorderBrush="#29282f" 
                                BorderThickness="1" 
                                Padding="2">
                            <ScrollViewer Width="500" Height="200" Background="#2f3136">
                                <WrapPanel x:Name="emojiPanel"
                                           Background="#2f3136"/>
                            </ScrollViewer>
                        </Border>
                    </Popup>
                    
                    <Button Width="60" Height="30"
                            Background="Transparent"
                            Foreground="White"
                            RenderOptions.BitmapScalingMode="Fant"
                            Margin="5,0,0,0"
                            Command="{Binding SendMessageCommand}">
                        <Image Source="./Icons/send.png" 
                                   Width="25" Height="25"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
